:root{
  --width-drawer: 360px;
  --white: #fff;
  --grey: #a0a2a8;
  --yellow: #ffbc00;
  --shadow: rgba(173, 97, 28, 0.08);
  --black: #2a3136;
  --black-book: #31393c;
  --black-author:#403f3f;
  --paragraph-color: #666666;
  --font-menus:'Roboto', sans-serif;
  --font-title: 'Roboto', sans-serif;
  --font-book-title: 'Roboto', sans-serif;
  --font-buttons: 'Oswald', sans-serif;
  --login-color:#807182;
  --footer-bg-color: #f2f2f2;
  --footer-color:#95989a;
  --login-linear: linear-gradient(to top, #867284, #9f5d7b);
  --cms-topbar: #fcfcfc;
  --cms-topbar-height:48px;
  --cms-sidebar-width:212px;
  --cms-color:#b7b7b7;
  --nibble-color:#9ed5c0;


  --font:'Raleway', sans-serif;
  --h3-color: #292929;
  --font-paragraph: 'Open-Sans', sans-serif;
  --color-paragraph: #666;
  --principal-color: #39A0ED;
  --menu-color:#bbb;
}

*{
  margin:0px;
  padding:0px;
}

h1{
  font-family:var(--font);
  font-weight:100;
  color:var(--h3-color);
  font-size:4rem;
  line-height: 5rem;
}


h2{
  font-family: var(--font-title);
  font-size:2.5rem;
  color: var(--black);
  font-weight: 300;
  letter-spacing:0.2px;
}

