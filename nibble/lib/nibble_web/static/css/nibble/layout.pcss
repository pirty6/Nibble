.primary-button{
  border: 2px solid var(--principal-color);
  padding: 0 26px;
  font-family: var(--font);
  letter-spacing: 1px;
  font-size: 0.75rem;
  color:var(--principal-color);
  text-transform: uppercase;
  font-weight: 700;
  height:46px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.6s;
}

.primary-button:hover{
  background-color: var(--principal-color);
  color: #fff;
  transition: all 0.6s;
}

th{
  text-align: left;
  font-size:1.15rem;
  font-family: var(--font-title);
  color: #0c0033;
  font-weight: 700;
}


th, td{
  margin-right: 90px;
  vertical-align: middle;
  padding-top: 21px;
  padding-bottom: 21px;
  border-bottom: solid 1px #A7A3B5;
}

td{
  font-size: 1.1rem;
  font-family: var(--font-title);
  color:#0c0033;
  opacity: 0.5;
}

table{
  border-collapse: collapse;
  width: 100%;
}

a{
  font-family: var(--font-title);
  color: var(--white);
  text-decoration: none;
}

button{
  padding-right:25px;
  padding-left: 25px;
  padding-top: 15px;
  padding-bottom: 15px;
  border-radius: 3px;
  border: none;
  font-size: 1rem;
  font-weight: bold;
  line-height: 1.5;
  background-color: #9E5D7B;
  color:#fff;
}

.cancel-button{
  padding-right:25px;
  padding-left: 25px;
  padding-top: 15px;
  padding-bottom: 15px;
  border-radius: 3px;
  border: none;
  font-size: 1rem;
  font-weight: bold;
  line-height: 1.5;
  background-color: #4d5a70;
  color:#fff;
  font-family: var(--font-title);
  margin-right: 18px;
}

ul{
  font-family: var(--font-title);
  color: #0c0033;
  opacity: 0.5;
  font-size: 1rem;
  list-style-type: none;
  &>li{
    margin-bottom: 20px;
  }
}
