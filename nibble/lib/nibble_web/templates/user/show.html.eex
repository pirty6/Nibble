<h2>Show User</h2>

<ul id="showBooks">

  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>Password:</strong>
    <%= @user.password %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @user.email %>
  </li>

</ul>

<span><%= link "Edit", to: user_path(@conn, :edit, @user) %></span>
<div id="back" class='cancel-button'>
<%= link to: user_path(@conn, :index) do %>
  Regresar
</div>
<% end %>
